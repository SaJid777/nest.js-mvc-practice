<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Nest</title>
    <link rel="stylesheet" href="../css/style.css">
  </head>
  <body>
    <br><br>
    <a href="/movies">Movielist</a>
    <br><br>
    <form method="post" action="/movies/updateMovie">

    <input type="text" name="id" id="id" value="{{movie.id}}" required hidden/>
    <label for="title">Title: </label>
    <input type="text" name="title" id="title" value="{{movie.title}}" required/>
    <br><br>
    <label for="category">Category: </label required>
    <select name="category" id="category">
      {{~#ifCond movie.category "Drama"}}
        <option selected value="Drama">Drama</option>
      {{else}} 
        <option value="Drama">Drama</option>
      {{~/ifCond~}}
      {{~#ifCond movie.category "Action"}}
        <option selected value="Action">Action</option>
      {{else}} 
        <option value="Action">Action</option>
      {{~/ifCond~}}
      {{~#ifCond movie.category "Horror"}}
        <option selected value="Horror">Horror</option>
      {{else}} 
        <option value="Horror">Horror</option>
      {{~/ifCond~}}
    </select>
    <br><br>
    <label for="image">Image: </label>
    <input type="text" name="image" id="image" value="{{movie.image}}" required/>
    <br><br>
    <label for="year">Release Date: </label>
    <input type="date" name="year" id="year" value="{{movie.year}}" required/>
    <br><br>
    <button type="submit" >Submit</button>
    <br><br>

    </form>
    </table>

  </body>
</html>